    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Card List</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Amasty\Input\Block\ShoppingCart" name="my_email" template="Amasty_Input::card_list.phtml">
            </block>
        </referenceContainer>
    </body>
</page>